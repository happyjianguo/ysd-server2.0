<?xml version="1.0" encoding="UTF-8"?>  
<configuration status="debug">
    <properties>  
        <Property name="fileName">./logs/ysd-task.log</Property>
        <Property name="backupFilePattern">./logs/ysd-task-%d{yyyyMMddHH}-%i.log</Property>
    </properties>  
    <Appenders>  
        <Console name="Console" target="SYSTEM_OUT">  
            <ThresholdFilter level="trace" onMatch="ACCEPT" onMismatch="DENY" />   
            <PatternLayout pattern="[%5p] [%-d{yyyy-MM-dd HH:mm:ss,SSS}] [%c.%M:%L] %m%n" />  
        </Console>
        <RollingFile name="RollingFile" fileName="${fileName}" filePattern="${backupFilePattern}">  
            <PatternLayout>  
                <pattern>[%d{ISO8601}] %C{1}(%M:%L): %m%n</pattern>  
            </PatternLayout>  
            <Policies>
                <TimeBasedTriggeringPolicy interval="24" modulate="true"/>  
                <SizeBasedTriggeringPolicy size="30MB"/>
            </Policies>  
            <DefaultRolloverStrategy max="10"/>  
        </RollingFile>    
    </Appenders>
    <Loggers>  
        <root level="info">
            <appender-ref ref="Console" />
            <appender-ref ref="RollingFile" />
        </root>
        <!---->
        <logger name="com.ysd" level="debug" />
        <logger name="org.springframework.boot.loader.JarLauncher" level="debug"/>
    </Loggers>
</configuration>